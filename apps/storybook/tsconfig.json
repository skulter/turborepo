{
  "extends": "@repo/typescript-config/storybook.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "storybook"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "./@mono/acme-ui/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
